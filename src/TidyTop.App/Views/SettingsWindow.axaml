<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TidyTop.App.Views.SettingsWindow"
        Title="TidyTop Settings"
        Width="500" Height="400"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="⚙️ TidyTop Settings" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" Spacing="15">
            <TextBlock Text="Coming soon:" FontWeight="Bold"/>
            <TextBlock Text="• Custom box creation and editing"/>
            <TextBlock Text="• Theme and color customization"/>
            <TextBlock Text="• Auto-organization rules"/>
            <TextBlock Text="• Hotkey configuration"/>
            <TextBlock Text="• Startup options"/>
        </StackPanel>
        
        <Button Grid.Row="2" 
                Content="Close" 
                HorizontalAlignment="Right" 
                Padding="20,10"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
