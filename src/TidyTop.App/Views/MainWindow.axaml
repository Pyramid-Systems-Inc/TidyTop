<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TidyTop.App.ViewModels"
        xmlns:models="clr-namespace:TidyTop.Core.Models;assembly=TidyTop.Core"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TidyTop.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="TidyTop"
        Width="800" Height="600"
        WindowState="Normal"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        CanResize="False"
        ShowInTaskbar="False"
        Topmost="True"
        Focusable="True"
        SystemDecorations="None"
        PointerPressed="OnWindowPointerPressed"
        PointerMoved="OnWindowPointerMoved"
        PointerReleased="OnWindowPointerReleased">

    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Opacity" Value="{Binding Opacity}"/>
            <Setter Property="IsVisible" Value="{Binding IsVisible}"/>
        </Style>
    </Window.Styles>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <!-- Unfenced desktop icons -->
        <ItemsControl ItemsSource="{Binding DesktopIcons}" Name="UnfencedIconsControl">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:DesktopIcon">
                    <Border Width="64"
                            Height="64"
                            Margin="2"
                            Background="Transparent"
                            CornerRadius="3"
                            PointerPressed="Icon_PointerPressed">
                        <Canvas.Left>
                            <Binding Path="Position.X"/>
                        </Canvas.Left>
                        <Canvas.Top>
                            <Binding Path="Position.Y"/>
                        </Canvas.Top>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="48"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <Image Grid.Row="0"
                                   Source="{Binding Icon, Converter={StaticResource ByteArrayToBitmapConverter}}"
                                   Stretch="Uniform"
                                   Width="48"
                                   Height="48"/>
                            <TextBlock Grid.Row="1"
                                       Text="{Binding Name}"
                                       FontSize="10"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       MaxWidth="60"
                                       Foreground="White"
                                       Background="#80000000"
                                       Padding="2"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!-- Main content area for desktop overlay -->
        <ItemsControl ItemsSource="{Binding Fences}" Margin="10">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:Fence">
                    <Border Width="{Binding Size.Width}"
                            Height="{Binding Size.Height}"
                            Background="{Binding BackgroundColor, Converter={StaticResource ColorToBrushConverter}}"
                            BorderBrush="{Binding BorderColor, Converter={StaticResource ColorToBrushConverter}}"
                            BorderThickness="{Binding BorderWidth}"
                            CornerRadius="{Binding CornerRadius}"
                            Opacity="{Binding Opacity}"
                            IsVisible="{Binding IsVisible}"
                            PointerPressed="Fence_PointerPressed">
                        <Canvas.Left>
                            <Binding Path="Position.X"/>
                        </Canvas.Left>
                        <Canvas.Top>
                            <Binding Path="Position.Y"/>
                        </Canvas.Top>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Fence Header -->
                            <Border Grid.Row="0"
                                    Background="{Binding TitleColor, Converter={StaticResource ColorToBrushConverter}}"
                                    CornerRadius="5,5,0,0"
                                    Padding="5">
                                <TextBlock Text="{Binding Title}"
                                           FontWeight="Bold"
                                           Foreground="Black"/>
                            </Border>
                            
                            <!-- Fence Content Area -->
                            <ItemsControl Grid.Row="1"
                                          ItemsSource="{Binding Icons}"
                                          Margin="5">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="models:DesktopIcon">
                                        <Border Width="48"
                                                Height="48"
                                                Margin="2"
                                                Background="Transparent"
                                                CornerRadius="3"
                                                PointerPressed="Icon_PointerPressed">
                                            <Grid>
                                                <Image Source="{Binding Icon, Converter={StaticResource ByteArrayToBitmapConverter}}"
                                                       Stretch="Uniform"
                                                       Width="32"
                                                       Height="32"/>
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="10"
                                                           TextWrapping="Wrap"
                                                           TextAlignment="Center"
                                                           MaxWidth="46"
                                                           Margin="0,2,0,0"
                                                           VerticalAlignment="Bottom"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                        
                        <Border.ContextFlyout>
                            <Flyout>
                                <StackPanel Spacing="5">
                                    <TextBlock Text="Fence Options" FontWeight="Bold"/>
                                    <Button Content="Edit Fence" Command="{Binding $parent[Window].DataContext.EditFenceCommand}" CommandParameter="{Binding}"/>
                                    <Button Content="Delete Fence" Command="{Binding $parent[Window].DataContext.DeleteFenceCommand}" CommandParameter="{Binding}"/>
                                    <Button Content="Change Color" Command="{Binding $parent[Window].DataContext.ChangeFenceColorCommand}" CommandParameter="{Binding}"/>
                                    <Separator/>
                                    <Button Content="Add Icons" Command="{Binding $parent[Window].DataContext.AddIconsToFenceCommand}" CommandParameter="{Binding}"/>
                                    <Button Content="Auto-Arrange" Command="{Binding $parent[Window].DataContext.AutoArrangeFenceCommand}" CommandParameter="{Binding}"/>
                                </StackPanel>
                            </Flyout>
                        </Border.ContextFlyout>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!-- Control Panel (initially hidden) -->
        <Panel IsVisible="{Binding ShowControlPanel}"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="10">
            <Border Background="White"
                    CornerRadius="5"
                    Padding="10"
                    BoxShadow="0 2 10 0 #80000000"
                    MaxWidth="300">
                <StackPanel Spacing="5">
                    <TextBlock Text="TidyTop Control Panel"
                               FontWeight="Bold"
                               FontSize="14"/>
                    <Separator/>
                    
                    <StackPanel Spacing="3">
                        <Button Content="Toggle Visibility (F12/Ctrl+H)"
                                Command="{Binding ToggleVisibilityCommand}"/>
                        <Button Content="Refresh Desktop (F11/Ctrl+R)"
                                Command="{Binding RefreshDesktopCommand}"/>
                        <Button Content="Create Fence (F10/Ctrl+N)"
                                Command="{Binding CreateFenceCommand}"/>
                        <Button Content="Save Layout (F9/Ctrl+S)"
                                Command="{Binding SaveLayoutCommand}"/>
                    </StackPanel>
                    
                    <Separator/>
                    
                    <StackPanel Spacing="2">
                        <TextBlock Text="Hotkeys:" FontWeight="Bold" FontSize="12"/>
                        <TextBlock Text="Tab - Show/Hide this panel" FontSize="10"/>
                        <TextBlock Text="Right-click - Show this panel" FontSize="10"/>
                        <TextBlock Text="Escape - Cancel action/hide panel" FontSize="10"/>
                        <TextBlock Text="Ctrl+Space - Toggle panel" FontSize="10"/>
                    </StackPanel>
                    
                    <Separator/>
                    
                    <StackPanel Spacing="2">
                        <TextBlock Text="Instructions:" FontWeight="Bold" FontSize="12"/>
                        <TextBlock Text="• Left-click and drag fences to move them"
                                   FontSize="10" TextWrapping="Wrap"/>
                        <TextBlock Text="• Right-click fences for options"
                                   FontSize="10" TextWrapping="Wrap"/>
                        <TextBlock Text="• Double-click icons to launch them"
                                   FontSize="10" TextWrapping="Wrap"/>
                        <TextBlock Text="• Drag icons between fences to organize"
                                   FontSize="10" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Panel>
    </Grid>
</Window>