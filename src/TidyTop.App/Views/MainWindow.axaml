<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TidyTop.App.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="TidyTop.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="TidyTop - Desktop Organizer"
        WindowState="Maximized"
        Background="#FF1E1E1E"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        CanResize="False"
        ShowInTaskbar="True"
        Topmost="False">

    <Grid>
        <!-- Background -->
        <Rectangle Fill="#FF1E1E1E" />
        
        <!-- Main Content Grid -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#FF2D2D30" 
                    CornerRadius="8" 
                    Padding="15"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ " FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="TidyTop Desktop Organizer" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                        <Button Content="ðŸ”„ Refresh" 
                                Background="#FF0E639C" 
                                Foreground="White" 
                                Padding="10,5"
                                CornerRadius="4"
                                Click="RefreshButton_Click"/>
                        <Button Content="âž• Add Box" 
                                Background="#FF16537E" 
                                Foreground="White" 
                                Padding="10,5"
                                CornerRadius="4"
                                Click="AddBoxButton_Click"/>
                        <Button Content="âš™ï¸ Settings" 
                                Background="#FF68217A" 
                                Foreground="White" 
                                Padding="10,5"
                                CornerRadius="4"
                                Click="SettingsButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content Area -->
            <ScrollViewer Grid.Row="1" 
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="BoxContainer" 
                           Orientation="Horizontal" 
                           Margin="10"
                           ItemWidth="280"
                           ItemHeight="320">
                    
                    <!-- Office Tools Box -->
                    <Border Background="#FF2E7D32" 
                            CornerRadius="12" 
                            Margin="10" 
                            Width="260" 
                            Height="300"
                            BoxShadow="0 4 20 0 #40000000">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Box Header -->
                            <Border Grid.Row="0" 
                                    Background="#FF1B5E20" 
                                    CornerRadius="12,12,0,0" 
                                    Padding="15,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="ðŸ“Š" 
                                               FontSize="20" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="Office Tools" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="(0)" 
                                               FontSize="12" 
                                               Foreground="#FFB0BEC5" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                            <!-- Box Content -->
                            <Border Grid.Row="1" 
                                    Background="#FF388E3C" 
                                    CornerRadius="0,0,12,12" 
                                    Padding="10">
                                <TextBlock Text="Drag office applications here or they will be automatically organized" 
                                           TextWrapping="Wrap" 
                                           Foreground="White" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           TextAlignment="Center"
                                           Opacity="0.7"/>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Games Box -->
                    <Border Background="#FF7B1FA2" 
                            CornerRadius="12" 
                            Margin="10" 
                            Width="260" 
                            Height="300"
                            BoxShadow="0 4 20 0 #40000000">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Box Header -->
                            <Border Grid.Row="0" 
                                    Background="#FF4A148C" 
                                    CornerRadius="12,12,0,0" 
                                    Padding="15,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="ðŸŽ®" 
                                               FontSize="20" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="Games" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="(0)" 
                                               FontSize="12" 
                                               Foreground="#FFB0BEC5" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                            <!-- Box Content -->
                            <Border Grid.Row="1" 
                                    Background="#FF8E24AA" 
                                    CornerRadius="0,0,12,12" 
                                    Padding="10">
                                <TextBlock Text="Games and entertainment applications will appear here automatically" 
                                           TextWrapping="Wrap" 
                                           Foreground="White" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           TextAlignment="Center"
                                           Opacity="0.7"/>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Social & Communication Box -->
                    <Border Background="#FF1976D2" 
                            CornerRadius="12" 
                            Margin="10" 
                            Width="260" 
                            Height="300"
                            BoxShadow="0 4 20 0 #40000000">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Box Header -->
                            <Border Grid.Row="0" 
                                    Background="#FF0D47A1" 
                                    CornerRadius="12,12,0,0" 
                                    Padding="15,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="ðŸ’¬" 
                                               FontSize="20" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="Social & Communication" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="(0)" 
                                               FontSize="12" 
                                               Foreground="#FFB0BEC5" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                            <!-- Box Content -->
                            <Border Grid.Row="1" 
                                    Background="#FF1E88E5" 
                                    CornerRadius="0,0,12,12" 
                                    Padding="10">
                                <TextBlock Text="Chat apps, browsers, email clients will be organized here" 
                                           TextWrapping="Wrap" 
                                           Foreground="White" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           TextAlignment="Center"
                                           Opacity="0.7"/>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Files & Documents Box -->
                    <Border Background="#FF F57C00" 
                            CornerRadius="12" 
                            Margin="10" 
                            Width="260" 
                            Height="300"
                            BoxShadow="0 4 20 0 #40000000">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Box Header -->
                            <Border Grid.Row="0" 
                                    Background="#FFE65100" 
                                    CornerRadius="12,12,0,0" 
                                    Padding="15,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="ðŸ“" 
                                               FontSize="20" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="Files & Documents" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="(0)" 
                                               FontSize="12" 
                                               Foreground="#FFB0BEC5" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                            <!-- Box Content -->
                            <Border Grid.Row="1" 
                                    Background="#FFFF9800" 
                                    CornerRadius="0,0,12,12" 
                                    Padding="10">
                                <TextBlock Text="File managers, text editors, and document viewers" 
                                           TextWrapping="Wrap" 
                                           Foreground="White" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           TextAlignment="Center"
                                           Opacity="0.7"/>
                            </Border>
                        </Grid>
                    </Border>
                    
                </WrapPanel>
            </ScrollViewer>
            
            <!-- Status Bar -->
            <Border Grid.Row="2" 
                    Background="#FF2D2D30" 
                    CornerRadius="8" 
                    Padding="15,10"
                    Margin="0,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="20">
                        <TextBlock Text="ðŸ“‹ Status: Ready" 
                                   Foreground="#FF90CAF9" 
                                   FontSize="12" 
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="StatusText"
                                   Text="ðŸ“¦ 0 applications organized" 
                                   Foreground="#FFBDBDBD" 
                                   FontSize="12" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="15">
                        <TextBlock Text="ðŸ’¡ Double-click desktop to hide/show boxes" 
                                   Foreground="#FF81C784" 
                                   FontSize="11" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="âŒ¨ï¸ Press F1 for help" 
                                   Foreground="#FFAED581" 
                                   FontSize="11" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" 
              Background="#80000000" 
              IsVisible="False">
            <Border Background="#FF2D2D30" 
                    CornerRadius="8" 
                    Padding="20" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel Spacing="15" Orientation="Horizontal">
                    <TextBlock Text="ðŸ”„" FontSize="20" VerticalAlignment="Center"/>
                    <TextBlock Text="Scanning desktop applications..." 
                               Foreground="White" 
                               FontSize="14" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>